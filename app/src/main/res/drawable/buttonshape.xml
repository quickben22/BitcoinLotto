<?xml version="1.0" encoding="utf-8"?>


<selector
    xmlns:android="http://schemas.android.com/apk/res/android">



    <item android:state_focused="true" >
        <shape android:shape="rectangle" >
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#529CE6"
                android:startColor="#B2D9FF"
                android:endColor="#1C68FF"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#4D5E99"
                />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:centerColor="#2B5178"
                android:startColor="#6D849C"
                android:endColor="#120DB3"
                android:type="linear"
                />
            <padding
