                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#4D5E99"
                />
        </shape>
    </item>



    <item android:state_enabled="false" >
        <shape android:shape="rectangle" >
            <corners
                android:radius="20dp"
                />
            <gradient
                android:angle="45"
                android:centerX="35%"
                android:startColor="#7994AD"
                android:centerColor="#8693A8"
                android:endColor="#08054F"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="250dp"
                android:height="60dp"
                />
            <stroke
                android:width="3dp"
                android:color="#4D5E99"
                />
        </shape>
    </item>

